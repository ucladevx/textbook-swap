.popup(data-popup='popup-1')
	.popup-inner
		.page
			a.popup-close(data-popup-close='popup-1', href='#') x
			h3 NEW TRADE
			div(class="row" id="forms")
				div(class="col-lg-12" id="ownedForm")
					label Select the book you can offer.
					div(class="input-group")
						input(class="form-control", type='text', id="ownedInput", placeholder='Search for owned book...' aria-describedby="ownedInputAddon")
						span(class="input-group-addon" id="ownedInputAddon") #[span(class="glyphicon glyphicon-search")]
			div(class="row" id="searchResults")
				div(class="col-lg-12" id="ownedSearchResultsBox")
					ul(id = "ownedSearchResultsList").list-group
			div(class = "row" id="transitionButtonRow")
				div(class = "col-lg-12 text-center")
					button(class="btn btn-primary" type="button" id="nextButton") Next
		.page
			a.popup-close(data-popup-close='popup-2', href='#') x
			h3 NEW TRADE (confirm book)
			div(class = "row" id="transitionButtonRow")
				div(class = "col-sm-3 col-sm-offset-3 text-center")
					button(class="btn btn-primary" type="button" id="prevButton") Previous
				div(class = "col-sm-3 text-center")
					button(class="btn btn-primary" type="button" id="nextButton") Next
		.page
			a.popup-close(data-popup-close='popup-3', href='#') x
			h3 NEW TRADE (select wanted books)
			div(class = "row" id="transitionButtonRow")
				div(class = "col-sm-3 col-sm-offset-3 text-center")
					button(class="btn btn-primary" type="button" id="prevButton") Previous
				div(class = "col-sm-3 text-center")
					button(class="btn btn-primary" type="button" id="nextButton") Next
		.page
			a.popup-close(data-popup-close='popup-4', href='#') x
			h3 NEW TRADE (confirm trade)
			div(class = "row" id="transitionButtonRow")
				div(class = "col-sm-3 col-sm-offset-3 text-center")
					button(class="btn btn-primary" type="button" id="prevButton") Previous
				div(class = "col-sm-3 text-center")
					button(class="btn btn-primary" type="button" id="nextButton") Next

		script(src='http://ajax.googleapis.com/ajax/libs/jqueryui/1.8.5/jquery-ui.min.js')
