.popup(data-popup='popup-1')
    .popup-inner
        h2 What Book Are You Willing to Offer?
        div(class="row" id="forms")
            div(class="col-lg-12" id="ownedForm")
                div(class="input-group")
                    input(class="form-control", type='text', id="ownedInput", placeholder='Search for owned book...' aria-describedby="ownedInputAddon")
                    span(class="input-group-addon" id="ownedInputAddon") #[span(class="glyphicon glyphicon-search")]
        div(class="row" id="searchResults")
            div(class="col-lg-12" id="ownedSearchResultsBox")
                ul(id = "ownedSearchResultsList").list-group
        p
            a(data-popup-close='popup-1', href='#') Close
        a.popup-close(data-popup-close='popup-1', href='#') x
